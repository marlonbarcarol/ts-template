{
	"extends": "./tsconfig.json",

	"compilerOptions": {
		"noEmit": false,

		"rootDir": "./src",
		"outDir": "./build/",
		"declaration": true,
		"declarationDir": "./build/types",
		"importHelpers": false,
		"removeComments": false,
		"sourceMap": true,
		"resolveJsonModule": false
	},

	"include": ["./src"],

	"exclude": ["./*.spec.ts", "./src/**/*.spec.ts", "./build", "./node_modules"]
}
